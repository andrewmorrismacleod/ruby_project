<h1>BACON</h1>

<form action="/generator" method="post">
<td>
  <input type='text' name = "first_name"><input type='text' name = "last_name">
</td>
<td>
  <input type='submit' value="Find Bacon Number">
</td>
</form><br><br>

<% if @game_run == true %>

  <% if @path == @name_check %>

  <p>You have entered the same names for both the start and target - that person's "Bacon" number is zero</p>

  <% else %>

    <p> <% @path.first.current_vertex.full_name %> <% @p %></p>

    <% @path.each_with_index do |link,index| %>
      <% if index == 0 %>
        <p> <%= link.current_vertex.full_name %> was in <%= link.link.title %> with </p>
      <% else %>
        <p> <%= link.current_vertex.full_name %> who was in <%= link.link.title %> with </p>
      <% end %>
    <% end %>
    <%= @path.last.next_vertex.full_name %>
  <% end %>

<% end %>
